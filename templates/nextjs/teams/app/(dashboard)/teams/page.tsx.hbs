import { requireAuth } from "@/lib/auth-utils";
import { getTeamsForUser } from "@/lib/teams";
import Link from "next/link";

export default async function TeamsPage() {
  const user = await requireAuth();
  const tenantId = (user as any).tenantId || "";
  const teams = await getTeamsForUser(user.id, tenantId);

  return (
    <div className="mx-auto max-w-4xl space-y-6 p-6">
      <div className="flex items-center justify-between">
        <h1 className="text-2xl font-bold">Teams</h1>
        <Link
          href="/teams/new"
          className="rounded-md bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700"
        >
          Create Team
        </Link>
      </div>

      <div className="grid gap-4 md:grid-cols-2">
        {teams.map((team) => (
          <Link
            key={team.id}
            href={`/teams/${team.id}`}
            className="rounded-lg border p-4 hover:border-blue-300 hover:shadow-sm"
          >
            <h3 className="font-semibold">{team.name}</h3>
            <p className="mt-1 text-sm text-gray-500">
              {team.members.length} member{team.members.length !== 1 ? "s" : ""}
            </p>
          </Link>
        ))}
      </div>

      {teams.length === 0 && (
        <div className="rounded-lg border-2 border-dashed p-8 text-center">
          <p className="text-gray-500">No teams yet. Create your first team to get started.</p>
        </div>
      )}
    </div>
  );
}
